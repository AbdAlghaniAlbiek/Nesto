<div class='content w-full'>
	<h1 class='p-relative'>Plans</h1>
	<div class='plans-page d-grid m-20 gap-20'>

		{{#each data}}
			<!-- Start plan -->
			<div class='plan {{borderColor type}} bg-white p-20'>
				<div class='top {{color}} txt-c p-20'>
					<h2 class='m-0 c-white'>{{type}}</h2>
					<div class='price c-white'><span>$</span>{{cost}}</div>
				</div>
				<ul>
					<li>
						{{#if accessAllTextLessons}}
							<i class='fa-solid fa-check fa-fw yes'></i>
						{{else}}
							<i class='fa-solid fa-xmark fa-fw'></i>
						{{/if}}
						<span>Access All Text Lessons</span>
						<i class='fa-solid fa-circle-info help'></i>
					</li>
					<li>
						{{#if accessAllVideosLessons}}
							<i class='fa-solid fa-check fa-fw yes'></i>
						{{else}}
							<i class='fa-solid fa-xmark fa-fw'></i>
						{{/if}}
						<span>Access All Videos Lessons</span>
						<i class='fa-solid fa-circle-info help'></i>
					</li>
					<li>
						{{#if appearOnLeaderboard}}
							<i class='fa-solid fa-check fa-fw yes'></i>
						{{else}}
							<i class='fa-solid fa-xmark fa-fw'></i>
						{{/if}}
						<span>Appear On Leaderboard</span>
						<i class='fa-solid fa-circle-info help'></i>
					</li>
					<li>
						{{#if browseContentWithoutAds}}
							<i class='fa-solid fa-check fa-fw yes'></i>
						{{else}}
							<i class='fa-solid fa-xmark fa-fw'></i>
						{{/if}}
						<span>Browse Content Without Ads</span>
						<i class='fa-solid fa-circle-info help'></i>
					</li>
					<li>
						{{#if accessAllAssignments}}
							<i class='fa-solid fa-check fa-fw yes'></i>
						{{else}}
							<i class='fa-solid fa-xmark fa-fw'></i>
						{{/if}}
						<span>Access All Assignments</span>
						<i class='fa-solid fa-circle-info help'></i>
					</li>
					<li>
						{{#if getDailyPrizes}}
							<i class='fa-solid fa-check fa-fw yes'></i>
						{{else}}
							<i class='fa-solid fa-xmark fa-fw'></i>
						{{/if}}
						<span>Get Daily Prizes</span>
						<i class='fa-solid fa-circle-info help'></i>
					</li>
					<li>
						{{#if earnCertificate}}
							<i class='fa-solid fa-check fa-fw yes'></i>
						{{else}}
							<i class='fa-solid fa-xmark fa-fw'></i>
						{{/if}}
						<span>Earn Certificate</span>
						<i class='fa-solid fa-circle-info help'></i>
					</li>
					<li>
						{{#if 1gBSpaceForHostingFiles}}
							<i class='fa-solid fa-check fa-fw yes'></i>
						{{else}}
							<i class='fa-solid fa-xmark fa-fw'></i>
						{{/if}}
						<span>1 GB Space For Hosting Files</span>
						<i class='fa-solid fa-circle-info help'></i>
					</li>
					<li>
						{{#if accessBadgeSystem}}
							<i class='fa-solid fa-check fa-fw yes'></i>
						{{else}}
							<i class='fa-solid fa-xmark fa-fw'></i>
						{{/if}}
						<span>Access Badge System</span>
						<i class='fa-solid fa-circle-info help'></i>
					</li>
				</ul>
				{{#if isCurrentPlan}}
					<p class='c-grey m-0 txt-c'>This Is Your Current Plan</p>
				{{else}}
					<a
						href='#'
						class='btn-shape {{color}} c-white d-block w-fit'
					>Join</a>
				{{/if}}

			</div>
			<!-- End plan -->
		{{/each}}

	</div>
</div>