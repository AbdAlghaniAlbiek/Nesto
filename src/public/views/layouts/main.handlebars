<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<title>Nesto</title>
		<link rel='icon' type='image/x-icon' href='../../logo/nesto_logo.ico' />
		<link rel='stylesheet' href='./../css/all.min.css' />
		<link rel='stylesheet' href='./../css/framework.css' />
		<link rel='stylesheet' href='./../css/master.css' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;500&display=swap'
			rel='stylesheet'
		/>
	</head>
	<body>
		<div
			style='display: grid; grid-template-columns: auto 1fr'
			class='page'
		>
			<!-- Start Sidebar -->
			<div
				class='sidebar bg-white p-20 p-relative rad-10'
				style='grid-column: 1; height: fit-content; position: sticky;'
			>
				<h3 class='p-relative txt-c mt-0'>Nesto</h3>
				<ul>
					<li>
						<a
							class='active d-flex align-center fs-14 c-black rad-6 p-10'
							href='/'
						>
							<i class='fa-regular fa-chart-bar fa-fw'></i>
							<span>Dashboard</span>
						</a>
					</li>
					<li>
						<a
							class='d-flex align-center fs-14 c-black rad-6 p-10'
							href='/settings'
						>
							<i class='fa-solid fa-gear fa-fw'></i>
							<span>Settings</span>
						</a>
					</li>
					<li>
						<a
							class='d-flex align-center fs-14 c-black rad-6 p-10'
							href='/profile'
						>
							<i class='fa-regular fa-user fa-fw'></i>
							<span>Profile</span>
						</a>
					</li>
					<li>
						<a
							class='d-flex align-center fs-14 c-black rad-6 p-10'
							href='/projects'
						>
							<i class='fa-solid fa-diagram-project fa-fw'></i>
							<span>Projects</span>
						</a>
					</li>
					<li>
						<a
							class='d-flex align-center fs-14 c-black rad-6 p-10'
							href='/courses'
						>
							<i class='fa-solid fa-graduation-cap fa-fw'></i>
							<span>Courses</span>
						</a>
					</li>
					<li>
						<a
							class='d-flex align-center fs-14 c-black rad-6 p-10'
							href='/friends'
						>
							<i class='fa-regular fa-circle-user fa-fw'></i>
							<span>Friends</span>
						</a>
					</li>
					<li>
						<a
							class='d-flex align-center fs-14 c-black rad-6 p-10'
							href='/files'
						>
							<i class='fa-regular fa-file fa-fw'></i>
							<span>Files</span>
						</a>
					</li>
					<li>
						<a
							class='d-flex align-center fs-14 c-black rad-6 p-10'
							href='/plans'
						>
							<i class='fa-regular fa-credit-card fa-fw'></i>
							<span>Plans</span>
						</a>
					</li>
				</ul>
			</div>
			<!-- End Sidebar -->

			<div>
				<!-- Start Head -->
				<div
					class='head bg-white p-15 between-flex'
					style='grid-column: 2; height: auto;'
				>
					<div class='search p-relative'>
						<input
							class='p-10'
							type='search'
							placeholder='Type A Keyword'
						/>
					</div>
					<div class='icons d-flex align-center'>
						<span class='notification p-relative'>
							<i class='fa-regular fa-bell fa-lg'></i>
						</span>
						<img src='images/avatar.png' alt='' />
					</div>
				</div>
				<!-- End Head -->

				<!-- Start content of pages -->
				<div style='grid-column: 2;'>
					{{{body}}}
				</div>
				<!-- End content of pages -->
			</div>

		</div>
	</body>
</html>